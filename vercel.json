{
  "version": 2,
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ],
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/categories.js": {
      "maxDuration": 30
    },
    "api/tags.js": {
      "maxDuration": 30
    },
    "api/tasks.js": {
      "maxDuration": 30
    },
    "api/analytics.js": {
      "maxDuration": 30
    }
  },
  "installCommand": "npm install && cd frontend && npm install",
  "buildCommand": "cd frontend && npm run build && npx prisma generate",
  "env": {
    "DATABASE_URL": "@database_url"
  }
} 